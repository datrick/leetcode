	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Solusion obj = new Solusion();
		int[] num = {1, 2, -1, 3, -4, 0, 5, -1, -1, 6, -1, -1, 2};
		System.out.format("result is: %d\n",obj.maxProduct(num));

	}

}
