package leet010;

public class SolutionII {
	public boolean isMatch(String s, String p) {
		int lens = s.length(), lenp = p.length(), i, j;
		boolean[][] A = new boolean[2][lens + 1];
		A[0][0] = true;
		for (i = 1; i <= lens; i ++)
			A[0][i] = false;
		for (i = 1; i <= lenp; i ++) {
			A[i % 2][0] = false;
			for (j = 1; j <= lens; j ++) {
				if (p.charAt(i - 1) == '*') {
					if (p.charAt(i - 2) == '*')
						A[i % 2][j] = A[(i - 1) % 2][j];
					else {
						if (p.charAt(i - 2) == '.')
							A[i % 2][j] = A[(i - 1) % 2][j - 1];
						else {
							if (s.charAt(j - 1) == p.charAt(i - 2) && (A[i % 2][j - 1] || A[(i - 1) % 2][j - 1]) || A[(i - 1) % 2][j])
								A[i % 2][j] = true;
							else
								A[i % 2][j] = false;
						}
					}
				} else {
					if ((p.charAt(i - 1) == '.' || p.charAt(i - 1) == s.charAt(j - 1)) && A[(i - 1) % 2][j - 1])
						A[i % 2][j] = true;
					else
						A[i % 2][j] = false;
				}
			}
//			if (A[i % 2][lens])
//				return true;
		}
		return A[lenp % 2][lens];
	}
}
